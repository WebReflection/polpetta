var cgi = require('cgi')
this.onstaticfile = function (event) {

  var
    p = event.polpetta,
    req = event.request,
    res = event.response,
    ext = event.ext.toLowerCase(),
    fs = require('fs'),
    path = require('path'),
    stat = fs.statSync(event.file); 


  if(parseInt(stat.mode.toString(8)[0], 10) & 1){
    var exec = cgi(event.file, {cwd : path.dirname(event.file)})
    exec(req, res)
    event.preventDefault()
  }

}

/// for debug purpose
function log(e) {
  console.log(e);
}
